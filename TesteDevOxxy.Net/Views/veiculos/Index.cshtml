@model IEnumerable<TesteDevOxxy.Net.Models.veiculos>

@{
    ViewBag.Title = "Index";
}

<h1>Lista de Veículos</h1>

<p>
    <button>@Html.ActionLink("Cadastrar Veículo", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bloqueado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Renavam)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bloqueado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Renavam)
            </td>
            <td>
                <button>@Html.ActionLink("Editar", "Edit", new { id = item.Veiculo })</button>
                <button>@Html.ActionLink("Visualizar", "Details", new { id = item.Veiculo })</button>
                <button>@Html.ActionLink("Excluir", "Delete", new { id = item.Veiculo })</button>
            </td>
        </tr>
    }

</table>
